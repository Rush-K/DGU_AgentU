<!--pages/userProfile/userProfile.wxml-->
<view class="container">
  <view class="card" wx:for="{{purchaseHistory}}" wx:for-index="idxone">

    <view class="wrapper">
      <image src="{{calendarUrl}}" class="icons" mode="widthFix"></image>
      <text style="font-size: 16px; font-weight: 400;">支付日期: {{item.purchaseDate}}</text>
    </view>

    <view class="price-wrapper">
      <image src="{{moneyUrl}}" class="icons" style="width: 8vw;" mode="widthFix"></image>
      <text>付款: ¥{{item.purchasePrice}}</text>
    </view>

    <view class="wrapper">
      <image src="{{listUrl}}" class="icons" style="width: 7vw;" mode="widthFix"></image>
      <text style="font-size: 20px; font-weight: 400;">付款清单</text>
    </view>

    <block wx:for="{{item.purchaseItems}}" wx:for-index="idxtwo">
      <view class="ticket">
        <text class="itemname">{{item.name}}</text>
        <view class="button" data-hid="{{idxone}}" data-iid="{{idxtwo}}" bindtap="useTicket" style="background-color : {{ item.isUsedTicket == false ? '' : 'lightgrey'}}">用餐券的使用</view>
      </view>
    </block>
  </view>
</view>
