.cart {
  height: 10vh;
  width: 100%;

  position: fixed;
  bottom: 0;

  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;

  border-top: 1px solid lightgray;
}

.cart-summary {
  margin: auto 40rpx;

  font-size: 30rpx;
  font-weight: 600;
}

.cart-text {
  display: block;
}

.cart-button {
  height: 60rpx;
  width: 250rpx;

  margin: 0 auto;

  font-size: 30rpx;
  border-radius: 30rpx;

  color: white;
  background-color: rgb(64, 167, 43);

  display: flex;
  justify-content: center;
  align-items: center;
}