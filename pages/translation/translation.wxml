<!--pages/translation/translation.wxml-->
<view class="container">
  <image class="detail__img" src="{{chinaUrl}}" mode="widthFix"></image>
  <view class="translator-card">
    <text class="card-title">请写下你想说的!</text>
    <textarea id="transText" bindinput="putText" class="text-form" type="text" placeholder="内容"/>
  </view>
  <view class="toolView">
    <image class="toolIcon" src="{{microPhoneUrl}}" bind:touchstart="voiceStart" bind:touchend="voiceEnd"/>
    <image class="toolIcon" src="{{megaPhoneUrl}}" bindtap="onPlay"/>
  </view>

  <view bindtap="translateText">
    <image class="arrow" src="{{arrowDownUrl}}"/>
  </view>

  <image class="detail__img" src="{{koreaUrl}}" mode="widthFix"></image>
  <view class="translator-card">
    <text class="card-title">翻译结果</text>
    <textarea class="text-form" value="{{resultText}}" disabled="true"></textarea>
  </view>
</view>