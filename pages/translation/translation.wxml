</view>

<view class="container">
<image bindtap="translateText" class="arrowSize" src="https://www.flaticon.com/svg/static/icons/svg/248/248537.svg"/>
</view>

<view class="container">
  <view class="card">
<textarea class="textinputSize">{{resultText}}</textarea>
  </view>
</view>