/**index.wxss**/
.header {
  display: flex;
  align-items: center;
  margin: 20rpx 0rpx;
}

.header__logo {
  width: 100rpx;
  height: 100rpx;
  margin-right: 25rpx;
}

.header__text {
  font-size: 50rpx;
  font-weight: bold;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 200rpx;  /* 높이 최소값 설정 */
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.body {
  padding: 0rpx 30rpx;
}