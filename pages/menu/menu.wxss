/* pages/menu/menu.wxss */
.container {
  height: 100vh;
  padding: 20rpx;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.place-info {
  width: 100%;  /* 가로 길이 85% */
  height: 13vh;  /* 높이 최소값 설정 */

  text-align: center;

  display: grid;
  grid-template-rows: 1fr 1fr;
  align-items: center;
}

.filter {
  height: 7vh;
  width: 100%;

  white-space: nowrap;

  text-align: center;
}

.filter-tab {
  display: inline-block;
  margin: 25rpx 10rpx 0rpx 10rpx;

  border: 1px solid black;
  border-radius: 50rpx;

  width: 20vw;
}

.selected {
  border: 2px solid rgb(255, 142, 142);
  color: rgb(255, 142, 142);
  font-weight: 600;
}

.menu {
  height: 65vh;
}

.menu-card {
  width: 90%;  /* 가로 길이 85% */
  min-height: 150rpx;  /* 높이 최소값 설정 */

  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;

  align-items: center;

  border-radius: 30rpx;
  box-shadow: 0rpx 1rpx 5rpx 1rpx gray;

  margin: 20rpx auto;
  padding: 10rpx 20rpx;
}

.menu-name {
  grid-row: 1 / 2;
  grid-column: 1 / 2;

  font-size: 40rpx;
  font-weight: 500;

  margin-left: 30rpx;
}

.menu-price {
  grid-row: 2 / 3;
  grid-column: 1 / 2;

  font-size: 35rpx;
  font-weight: 350;

  margin-left: 30rpx;
}

.menu-allergy {
  grid-row: 1 / 2;
  grid-column: 2 / 3;

  display: flex;
  flex-direction: row-reverse;
}

.menu-button {
  grid-row: 2 / 3;
  grid-column: 2 / 3;

  margin-left: auto;
}

.button {
  height: 50rpx;
  width: 180rpx;

  font-size: 25rpx;
  border-radius: 30rpx;

  color: white;
  background-color: rgb(255, 142, 142);

  display: flex;
  justify-content: center;
  align-items: center;
}

.cart {
  height: 10vh;
  width: 100%;

  display: flex;
  flex-direction: column;

  text-align: center;

  justify-content: space-around;
  align-items: center;
}

.cart-summary {
  font-weight: 600;
}

.cart-button {
  height: 50rpx;
  width: 300rpx;

  font-size: 30rpx;
  border-radius: 30rpx;

  color: white;
  background-color: rgb(64, 167, 43);

  display: flex;
  justify-content: center;
  align-items: center;
}